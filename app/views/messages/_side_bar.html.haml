.chat-side
  .chat-side__side-header
    .chat-side__side-header__box
      .chat-side__side-header__box__user-name
        = current_user.name
      .chat-side__side-header__box__menu  
        .chat-side__side-header__box__menu__new-group
          = link_to new_group_path do
            =icon('fas', 'edit', class: 'pen')
        .chat-side__side-header__box__menu__edit-user   
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog', class: 'haguruma')

  .groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group) do
          .groups__group__group-name
            = group.name
          .groups__group__latest-message
            = group.show_last_message 


    
